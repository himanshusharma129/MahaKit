<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory android:title="@string/general_cat"
        app:isPreferenceVisible="false">

        <ListPreference
            android:defaultValue="@string/english"
            android:dialogTitle="@string/lang_tile"
            android:entries="@array/lang_list_value"
            android:entryValues="@array/lang_list_title"
            android:key="@string/lang_key"
            android:title="@string/lang_tile"
            android:summary="@string/lang_summary" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/info_cat">

        <Preference
            android:key="@string/about_key"
            android:title="@string/about"></Preference>

        <Preference
            android:key="@string/privacy_policy_key"
            android:title="@string/privacy_policy"></Preference>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/security_cat"
        android:key="@string/security_key">

        <Preference
            android:key="@string/logout_key"
            android:title="@string/logout" />

    </PreferenceCategory>

</PreferenceScreen>